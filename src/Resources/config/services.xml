<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="resource_crawler.crawler"
                 class="AndrewSvirin\ResourceCrawlerBundle\Crawler\ResourceCrawler"
                 autowire="true"
                 public="true">
            <argument key="$processManager" type="service" id="resource_crawler.process_manager"/>
        </service>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Resource\ResourceManager" autowire="true" public="false">
            <argument key="$reader" type="service" id="resource_crawler.reader"/>
        </service>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Resource\ResourceFactory" autowire="true" public="false"/>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Extractor\HtmlExtractor" autowire="true" public="false"/>
        <service id="resource_crawler.reader"
                 class="AndrewSvirin\ResourceCrawlerBundle\Reader\ResourceReader"
                 autowire="true"
                 public="false">
            <argument key="$httpClient" type="service" id="http_client"/>
        </service>
        <service id="resource_crawler.process_manager"
                 class="AndrewSvirin\ResourceCrawlerBundle\Process\ProcessManager"
                 autowire="true"
                 public="false">
            <argument key="$processStore"
                      type="service"
                      id="resource_crawler.process_file_store"/>
        </service>
        <service
                id="resource_crawler.process_file_store"
                class="AndrewSvirin\ResourceCrawlerBundle\Process\FileProcessStore"
                autowire="true"
                public="false"
        />
        <service id="AndrewSvirin\ResourceCrawlerBundle\Process\ProcessFactory" autowire="true" public="false"/>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Process\TaskFactory" autowire="true" public="false"/>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Resource\NodeFactory" autowire="true" public="false"/>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Resource\UriFactory" autowire="true" public="false"/>
        <service id="AndrewSvirin\ResourceCrawlerBundle\Process\TaskPacker" autowire="true" public="false"/>
    </services>
</container>