<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
    http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="resource_crawler.crawler"
                 class="AndrewSvirin\ResourceCrawlerBundle\Crawler\ResourceCrawler"
                 public="true">
            <argument type="service" id="resource_crawler.reader"/>
        </service>
        <service id="resource_crawler.reader"
                 class="AndrewSvirin\ResourceCrawlerBundle\Reader\ResourceReader"
                 public="false">
            <argument type="service" id="http_client"/>
            <argument type="service" id="filesystem"/>
        </service>
    </services>
</container>